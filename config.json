{
	"layouts": [
		{
			"id": "main",
			"direction": "Vertical",
			"constraints": ["l.3", "p.70", "p.30"]
		},
		{
			"id": "widgets",
			"direction": "Horizontal",
			"constraints": ["50", "50"],
			"parent": "main.1"
		},
		{
			"id": "quests",
			"direction": "Vertical",
			"constraints": ["50", "50"],
			"parent": "widgets.1"
		}
	],
	"states": ["CategoriesFocus", "CategoriesActive", "TasksFocus", "TasksActive", "MilestonesFocus", "MilestonesActive", "HelpPreview"],
	"keybinds": {
		"CategoriesFocus": {
			"Enter": "State(CategoriesActive)",
			"Right": "State(TasksFocus)",
			"Left": "State(TasksFocus)",
			"C(q)": "quit",
			"C(h)": "Set(last_state, CategoriesFocus);State(HelpPreview);Toggle(help)"
		},
		"CategoriesActive": {
			"Esc": "State(CategoriesFocus)",
			"Enter": "Result(adding categories not yet supported)",
			"Down": "Change(category_id, 1)",
			"Up": "Change(category_id, -1)",
			"C(q)": "State(CategoriesFocus)",
			"C(h)": "Set(last_state, CategoriesActive);State(HelpPreview);Toggle(help)"
		},
		"TasksFocus": {
			"Enter": "State(TasksActive)",
			"Right": "State(CategoriesFocus)",
			"Left": "State(CategoriesFocus)",
			"Down": "State(MilestonesFocus)",
			"Up": "State(MilestonesFocus)",
			"C(q)": "quit",
			"C(h)": "Set(last_state, TasksFocus);State(HelpPreview);Toggle(help)"	
		},
		"TasksActive": {
			"Esc": "State(TasksFocus)",
			"Enter": "Result(adding tasks not yet supported)",
			"Down": "Change(task_id, 1)",
			"Up": "Change(task_id, -1)",
			"C(q)": "State(TasksFocus)",
			"C(h)": "Set(last_state, TasksActive);State(HelpPreview);Toggle(help)"
		},
		"MilestonesFocus": {
			"Enter": "State(MilestonesActive)",
			"Right": "State(CategoriesFocus)",
			"Left": "State(CategoriesFocus)",
			"Down": "State(TasksFocus)",
			"Up": "State(TasksFocus)",
			"C(q)": "quit",
			"C(h)": "Set(last_state, MilestonesFocus);State(HelpPreview);Toggle(help)"
		},
		"MilestonesActive": {
			"Esc": "State(MilestonesFocus)",
			"Enter": "Result(adding milestones not yet supported)",
			"Down": "Change(milestone_id, 1)",
			"Up": "Change(milestone_id, -1)",
			"C(q)": "State(MilestonesFocus)",
			"C(h)": "Set(last_state, MilestonesActive);State(HelpPreview);Toggle(help)"
		},
		"HelpPreview": {
			"Esc": "State($last_state);Toggle(help)",
			"C(q)": "State($last_state);Toggle(help)"	
		}
	},
	"styles": {
		"active": {
			"fg": "#DCA55A",
			"bg": "#000000"
		},
		"focus": {
			"fg": "#C89146",
			"bg": "#0A0A0A"
		},
		"passive": {
			"fg": "gray",
			"bg": "#191919"
		}
	},
	"widgets": [
		{
			"widget_type": "Categories",
			"layout": "widgets",
			"constraint": 0,
			"styles": {
				"CategoriesActive": "active",
				"CategoriesFocus": "focus",
				"_": "passive"
			}
		},
		{
			"widget_type": "Tasks",
			"layout": "quests",
			"constraint": 0,
			"styles": {
				"TasksActive": "active",
				"TasksFocus": "focus",
				"_": "passive"
			}
		},
		{
			"widget_type": "Milestones",
			"layout": "quests",
			"constraint": 1,
			"styles": {
				"MilestonesActive": "active",
				"MilestonesFocus": "focus",
				"_": "passive"
			}
		},
		{
			"widget_type": "Help",
			"id": "help",
			"layout": "frame",
			"constraint": 0,
			"styles": {
				"HelpPreview": "active",
				"_": "passive"
			},
			"constraint_fit": {"Centered": {"percent_x": 60, "percent_y": 40}},
			"visible": false
		}
	],
	"values": {
		"category_id": "0",
		"task_id": "0",
		"milestone_id": "0",
		"last_state": "_"
	}
}
